# Chemistry Avatar Configuration
# Copy this to .env.local and configure as needed

# Backend API URL (optional - auto-detects if not set)
# Leave empty or set to localhost for local development
# Set to your network IP for network access (e.g., http://192.168.1.100:8000)
# The app will auto-detect the correct URL based on how you access it!
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b-instruct-q4_K_M

# Optional: Enable debug logging
DEBUG=false

# Optional: Custom model parameters
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40
OLLAMA_NUM_PREDICT=512

# Optional: RAG Configuration
RAG_RETRIEVAL_K=3
RAG_INDEX_PATH=backend/ord_faiss.index
RAG_DATA_PATH=backend/ord_reactions.json
